<nav>
  <ul class="pager">
    <% if page > 0 %>
      <li class="previous">
        <%= link_to "&larr; Previous".html_safe,
                    films_path(page: page - 1),
                    title: "Previous Page" %>
      </li>
    <% end %>
    <li class="next">
      <%= link_to "Next &rarr;".html_safe,
                  films_path(page: page + 1),
                  title: "Next Page" %>
    </li>
  </ul>
</nav>